WindowManager:
    StartScreen:
    LoginScreen:
    NewUserScreen:
    TransactionScreen:
    AddScreen:
    EditScreen:

<Button>
    font_size:10
    size_hint:0.25, 0.2
    color:1,1,1,1
    background_color: 0/255, 128/255, 1, 1

<PinInput>
    size_hint:.2, .1

<AmountInput>
    size_hint:.16,.05


<Label>
    font_size:15
    size_hint:.4,.1
    #background_color:0,0,0,1

<TransactionLabel@Label>
    font_size:12
    halign:'left'

<BackgroundColor@Widget>
    background_color:1,1,1,1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color:0,0,0,1

<CustomDropDown>
    size_hint:.16,.1
    Button:
        text:"Payment or Fee"
        on_release:dropdown.select("Payment/Fee")
    Button:
        text:"Deposit or Credit"
        on_release:dropdown.select("Deposit/Credit")


<StartScreen>:
    name:"start"
    btnNewUser:btnNewUser

    FloatLayout:
        BackgroundLabel:
            text:"My Check Register"
            pos_hint:{'x':.3, 'y':.8}

        Button:
            id:btnNewUser
            text:"New User"
            pos_hint:{'x':.3, 'y':.3}
            opacity:1
            on_release:
                app.root.current = "newuser"
                root.manager.transition.direction ="left"

        Button:
            id:login
            text:"Login"
            pos_hint:{'x':.3, 'y':.6}
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "left"

<NewUserScreen>:
    name:"newuser"

    btnNewUserSubmit:btnNewUserSubmit
    input1:input1
    input2:input2

    nuErrorLabel:nuErrorLabel

    FloatLayout:
        BackgroundLabel:
            id:nuErrorLabel
            text:"I Am here"
            color:0,0,0,1
            pos_hint:{'x':.3, 'y':.35}
            halign:'center'
            valign:'middle'

        BackgroundLabel:
            text:"Please enter a Pin"
            pos_hint:{'x':.3, 'y':.85}
            halign:'center'
            valign:'middle'

        PinInput:
            id:input1
            multiline:False
            pos_hint:{'x':.4,'y':.75}

        BackgroundLabel:
            text:"Please enter renter the Pin"
            pos_hint:{'x':.3, 'y':.55}
            halign:'center'
            valign:'middle'

        PinInput:
            id:input2
            multiline:False
            pos_hint:{'x':.4,'y':.45}

        Button:
            id:btnNewUserSubmit
            text:"Submit"
            pos_hint:{'x':.3,'y':.2}
            on_release:
                root.btnNUS()
                app.root.current = "transactions" if nuErrorLabel.text == "0" else "newuser"
                root.manager.transition.direction = "left"

        Button:
            text:"Cancel"
            pos_hint:{'x':.3, 'y':.025}
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"

<LoginScreen>:
    name:"login"
    btnLoginSubmit:btnLoginSubmit
    input1:input1

    lsErrorLabel:lsErrorLabel

    FloatLayout:
        BackgroundLabel:
            text:"Please enter your pin"
            pos_hint:{'x':.3, 'y':.75}
            halign:'center'
            valign:'middle'

        Label:
            id:lsErrorLabel
            color:0,0,0,1
            text:"Error Message Here"
            pos_hint:{'x':.3, 'y':.4}
            halign:'center'
            valign:'middle'

        PinInput:
            id:input1
            multiline:False
            pos_hint:{'x':.4,'y':.6}

        Button:
            id:btnLoginSubmit
            text:"Submit"
            pos_hint:{'x':.3,'y':.2}
            on_release:
                root.btnLSS()
                app.root.current = "transactions" if lsErrorLabel.text == "0" else "login"
                root.manager.transition.direction = "left"
        Button:
            id:btnLoginCancel
            text:"Cancel"
            pos_hint:{'x':.3, 'y':.025}
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"

<RV>:
    viewclass:'SelectableLabel'
    data:[{'text' : str(x)} for x in root.data_items]
    SelectableRecycleGridLayout:
        cols: 8
        default_size: None, dp(26)
        default_size_hint: 1, None
        size_hint_y: None
        multiselect: True
        touch_multiselect: True


<TransactionScreen>:
    name:"transactions"
    #rv_transactions:rv_transactions

    BoxLayout:
        orientation:'vertical'

        BoxLayout:
            size_hint:1,.05
            orientation:'horizontal'

            TransactionLabel:
                text:"NUMBER/CODE"
                size_hint:.2,.1
                font_size:12

            TransactionLabel:
                text:"DATE"
                size_hint:.15,.1
                #font_size:12

            TransactionLabel:
                text:"TRANSACTION DESCRIPTION"
                size_hint:.35,.1
                #font_size:12

            TransactionLabel:
                text:"PAYMENT/FEE"
                size_hint:.3,.1
                #font_size:12

            TransactionLabel:
                text:"CLEARED"
                size_hint:.25,.1
                #font_size:12

            TransactionLabel:
                text:"DEPOSIT/REFUND"
                size_hint:.3,.1
                #font_size:12

            TransactionLabel:
                text:"BALANCE"
                size_hint:.3,.1
                #font_size:12

        BoxLayout:
            size_hint:1,1
            RV:

        BoxLayout:
            size_hint:1,1
            orientation:'horizontal'
            Button:
                id:btnNew
                text:"New Transaction"
                size_hint:.2,.2
                on_release:
                    app.root.current = 'add'
                    root.manager.transition.direction = "down"

            Button:
                id:btnEdit
                text:"Edit Transaction"
                size_hint:.2,.2
                on_release:
                    app.root.current = "edit"
                    root.manager.transition.direction = "up"

            Button:
                id:btnDelete
                text:"Delete Transaction"
                size_hint:.2,.2

            Button:
                id:btnExit
                text:"Exit Application"
                size_hint:.2,.2
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"

<AddScreen>
    name:"add"
    btnAddNewTransaction:btnAddNewTransaction

    FloatLayout:
        Label:
            pos_hint:{'x':.3, 'y':.85}
            size_hint: .16,.05
            text:"Check Number/Transaction Code"
        Label:
            pos_hint:{'x':.3, 'y':.75}
            size_hint: .16,.05
            text:"Transaction Date"
        Label:
            pos_hint:{'x':.3, 'y':.65}
            size_hint: .16,.05
            text:"Transaction Description"
        Label:
            pos_hint:{'x':.3, 'y':.55}
            size_hint: .16,.05
            text:"Payment/Fee OR Deposit/Refund"
        Label:
            pos_hint:{'x':.3, 'y':.45}
            size_hint: .16,.05
            text:"Amount"
        Label:
            pos_hint:{'x':.3, 'y':.35}
            size_hint: .16,.05
            text:"Cleared"

        TextInput:
            pos_hint:{'x':.7, 'y':.85}
            size_hint: .16,.05
            id:txtNumCode
        TextInput:
            pos_hint:{'x':.7, 'y':.75}
            size_hint: .16,.05
            id:txtTransDate
        TextInput:
            pos_hint:{'x':.7, 'y':.65}
            size_hint: .16,.05
            id:txtTransDescription
        #CustomDropDown:
        #    pos_hint:{'x':.7, 'y':.55}
        #    #size_hint: .16,05

        AmountInput:
            pos_hint:{'x':.7, 'y':.45}
            size_hint: .16,.05
            id:txtAmount
            multiline:False

        CheckBox:
            pos_hint:{'x':.7, 'y':.35}
            size_hint: .16,.05
            id:chkCleared

        Button:
            text:"Cancel"
            pos_hint:{'x':.1, 'y':.15}
            size_hint:.2,.1
            id:btnCancel
            on_release:
                app.root.current="transactions"
                root.manager.transition.direction = "up"

        Button:
            text:"Add Transaction"
            pos_hint:{'x':.7, 'y':.15}
            size_hint:.2,.1
            id:btnAddNewTransaction
            root:btnAddNewTransaction

        Label:
            id:atsErrorLabel
            color:0,0,0,1
            text:"Error Message Here"
            pos_hint:{'x':.4, 'y':.15}
            halign:'center'
            valign:'middle'



<EditScreen>
    name:"edit"
    Button:
        text:"go back"
        on_release:
            app.root.current="transactions"
            root.manager.transition.direction = "down"